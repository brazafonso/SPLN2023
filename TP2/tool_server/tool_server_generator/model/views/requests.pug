extends layout

block content
  .w3-cell-row
    .w3-container.w3-cell.w3-center(style="width:50%;")
      h2 Pending Requests
      table.w3-table.w3-centered.border_color
        tr.secundary_bg_color.secundary_text_color
            th Number
            th Command
            th Date
            th Status
        each p in queue
            tr
              td=p.number
              td=p.command
              td=p.date
              td=p.status
    .w3-container.w3-cell.w3-center(style="width:50%;")
      h2 Completed Requests
      table.w3-table.w3-centered.border_color
        tr.secundary_bg_color.secundary_text_color
            th Number
            th Command
            th Date
            th Download
            th Delete
        each p in completed
            tr.primary_bg_color.primary_text_color
              td=p.number
              td=p.command
              td=p.date
              td
                form.w3-container(action='/requests/'+p.number method="get")
                  button.w3-btn.secundary_bg_color.secundary_text_color(type="submit") Download
              td 
                form.w3-container(action='/requests/delete/'+p.number method="post")
                  button.w3-btn.secundary_bg_color.secundary_text_color(type="submit") Delete
  br
