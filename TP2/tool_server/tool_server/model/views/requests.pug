extends layout

block content
  .w3-container.w3-indigo
    h1 Requests 
  .w3-cell-row
    .w3-contaneir.w3-cell
      h2 Pending requests
      table.w3-table-all.w3-bordered
        tr
            th Number
            th Command
            th Date
        each p in queue
            tr
              td=p.number
              td=p.command
              td=p.date
    .w3-container.w3-cell
      h2 Completed requests
      table.w3-table-all.w3-bordered
        tr
            th Number
            th Command
            th Date
            th 
            th 
        each p in completed
            tr
              td=p.number
              td=p.command
              td=p.date
              td
                form.w3-container(action='/requests/'+p.number method="get")
                  button.w3-btn.w3-purple(type="submit") Download
              td 
                form.w3-container(action='/requests/delete/'+p.number method="post")
                  button.w3-btn.w3-purple(type="submit") Delete


  .w3-container.w3-indigo 
    h3 Generated by tool server 2023 - [#[a(href="/") Return]]